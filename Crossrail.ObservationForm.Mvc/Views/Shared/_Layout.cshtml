<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />

    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/crossrail/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/app")
</head>
    <body>
        <div class="header">
            <div class="content">
                <img width="68" height="63" src="~/Content/images/crossrail_logo_small.png" alt="" class="crossrail-logo" />

                <div class="content-title">
                <h1>Observations</h1>
                <p>
                    Crossrail Observation form Version 2.0
                </p>
                </div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>

        @RenderSection("scripts", required: false)
    </body>
</html>
